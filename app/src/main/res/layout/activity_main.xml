<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_view_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/text_view_time"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_time"/>
    <TextView
        android:id="@+id/text_view_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/text_view_action"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_action"/>
    <TextView
        android:id="@+id/text_view_ema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/text_view_close"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_close"/>
    <TextView
        android:id="@+id/text_view_decision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/text_view_ema"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_ema"/>
    <TextView
        android:id="@+id/text_view_psar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/text_view_decision"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_decision"/>

</androidx.constraintlayout.widget.ConstraintLayout>